<article class="article">
  <div class="text-center">
    <h1 class="article-title"><%- page.title %></h1>
    <%- partial('_partial/post-meta') %>
  </div>
  
  <% if (page.toc) { %>
  <div class="row toc-container">
    <div class="collapsible">
      <input id="collapsible" type="checkbox" name="collapsible">
      <label for="collapsible">TOC</label>
      <div class="collapsible-body">
        <%- toc(page.content, {list_number: false}) %>
      </div>
    </div>
  </div>
  <% } %> <% if (page.card) { %>
  <div class="card">
    <img src="<%- page.card.poster %>" alt="Poster">
  
    <div class="card-body">
      <h4 class="card-title"><%- page.card.title %></h4>
      <h5 class="card-subtitle"><%- page.card.released %></h5>
      <p class="card-text">
        <%- page.card.details %>
      </p>
      <a class="paper-btn" href="<%- page.card.more %>">More</a>
    </div>
  </div>
  <% } %>

  <%- page.content %>

  <% if (page.tags && page.tags.length){ %>
    <% var tags = [];
      page.tags.forEach(function(tag){
        tags.push('<a href="' + config.root + tag.path + '">#' + tag.name + '</a>');
      }); %>
      <span class="text-right">
        <%- tags.join(' ') %>
      </span>
  <% } %>
</article>

<div class="text-center">
  <% if (page.prev_post) { %>
  <a class="paper-btn" href="<%- page.prev_post %>">
    <i class='fa-solid fa-angles-left'></i>
  </a> <% } %> <% if (page.next_post) { %>
  <a class="paper-btn" href="<%- page.next_post %>">
    <i class='fa-solid fa-angles-right'></i>
  </a> <% } %>
</div>

<% if (theme.diff_blog) { %>
<section>
  <hr>
  <script id="diffblog-plugin-script" async="false" src="https://diff.blog/static/js/diffblog_plugin_v1.js"></script> 
  <script>
    document.getElementById("diffblog-plugin-script").addEventListener("load", function () {
      DiffBlog(
        "<%- theme.diff_blog %>"
      );
    });
  </script>
</section>
<% } %>
<%- partial('_partial/comments') %>
