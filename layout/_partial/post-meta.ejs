<p class="article-meta">
  <span>
    <i class="fa-regular fa-calendar"></i>
    Posted on <%- full_date(page.date, 'dddd, MMMM Do YYYY') %>
  </span>
  <% if (page.updated) { %>
  <span>
    <i class="fa-regular fa-calendar-check"></i>
    Edited on <%- full_date(page.updated, 'dddd, MMMM Do YYYY') %>
  </span>
  <% } %>
  <% if (page.categories && page.categories.length){ %>
    <i class="fa-regular fa-folder"></i>
    <% var categories = []; page.categories.forEach(function(category){
    categories.push('<a href="' + config.root + category.path + '">' + category.name + '</a>'); }); %>
    <span class="text-capitalize"><%- categories.join(' > ') %></span>
  <% } %>
  <span>
    <i class="fa-regular fa-file-word"></i>
    <%- symbolsCount(page) %> words â‰ˆ 
    <i class="fa-regular fa-clock"></i>
    <%- symbolsTime(page) %>
  </span>
  
</p>
